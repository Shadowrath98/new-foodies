<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    android:layout_width="match_parent"

    android:layout_margin="5dp"
    card_view_cardCornerRadius="5dp"
    card_view_cardElevation="10dp"
    android:layout_height="200dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/submarineImageView"
            android:padding="5dp"
            android:src="@drawable/abc" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/submarineNameAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Teacher Data"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#D61139" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/submarinePriceAdapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="Price : "
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textStyle="italic" />
                </TableRow>



                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <ImageView
                        android:id="@+id/submarineDelete"
                        android:layout_width="64dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_delete_24" />

                    <ImageView
                        android:id="@+id/submarineUpdate"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_logout" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>